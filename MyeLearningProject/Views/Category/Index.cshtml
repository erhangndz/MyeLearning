@using Entity.Models;
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Kategoriler</h3>
       
    </div>
   
</div>

@{
    int count = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">Kategoriler</h4>
          
            <div class="table table-hover">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th></th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;

                        <tr>
                            <td>@count</td>
                            <td>@item.CategoryName</td>
                            <td>
                                <a asp-action="DeleteCategory" asp-route-id="@item.CategoryId" class="btn btn-outline-danger">Sil</a>
                                <a asp-action="EditCategory" asp-route-id="@item.CategoryId" class="btn btn-outline-primary">Düzenle</a>
                            </td>
                           
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a href="/Category/AddCategory" class="btn btn-outline-primary">Yeni Kategori Ekle</a>
</div>

