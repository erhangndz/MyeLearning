@using Entity.Models;
@model List<Course>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}



<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Kurslar</h3>

    </div>

</div>

@{
    int count = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">Kurslar</h4>

            <div class="table table-hover">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kurs Adı</th>
                            <th>Kategorisi</th>
                            <th>Eğitmeni</th>


                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;

                            <tr>
                                <td>@count</td>
                                <td>@item.CourseName</td>
                
                                <td>@item.Category.CategoryName</td>
                                <td>@item.AppUser.NameSurname</td>


                                <td>
                                   
                                    <a asp-action="WatchCourse" asp-route-id="@item.CourseId" asp-route-name="@item.CourseName" class="btn btn-outline-primary"><i class='mdi mdi-play'></i>Kursu İzle</a>
                                    <a asp-action="Index" asp-controller="Comment" asp-route-id="@item.CourseId" asp-route-name="@item.CourseName" class="btn btn-outline-primary"><i class='mdi mdi-play'></i>Kursu İzle</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
</div>



