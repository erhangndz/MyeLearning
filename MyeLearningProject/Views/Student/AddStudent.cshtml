@using Entity.Models;
@model Student
@{
    ViewData["Title"] = "AddStudent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Öğrenci Ekleme Sayfası</h3>

    </div>

</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-block">


            <form method="post">

                <label>Ad</label>
                <br />
                <input type="text" asp-for="Name" class="form-control" required/>
                <br />
                <label>Soyad</label>
                <br />
                <input type="text" asp-for="Surname" class="form-control" required />
                <br />
                <label>Email</label>
                <br />
                <input type="email" asp-for="Email" class="form-control" required />
                <br />
                <label>Şifre</label>
                <br />
                <input type="password" asp-for="Password" class="form-control" required  />
                <br />
                <br />
                <button class="btn btn-outline-primary">Kaydet</button>
            </form>



        </div>
    </div>
</div>

