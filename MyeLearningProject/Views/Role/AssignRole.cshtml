@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Rol Atama</h3>

    </div>

</div>

@{
    int count = 0;
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
            <label class="form-check-label" asp-for="@Model[i].RoleExist">@Model[i].RoleName</label>
        </div>
    }
    <br />
    <button class="btn btn-outline-primary"><i class='mdi mdi-save'></i> Kaydet</button>
</form>
