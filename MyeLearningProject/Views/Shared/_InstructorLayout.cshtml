            <div class="container-fluid">

                <div class="row">
                    <div class="col-12">
                        @RenderBody()
                    </div>
                </div>

            </div>

            <footer class="footer">
                © @DateTime.Now.Year eLearning Admin Paneli
            </footer>

        </div>

    </div>

    @await Component.InvokeAsync("_AdminScripts")
