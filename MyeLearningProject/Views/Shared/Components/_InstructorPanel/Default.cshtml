



    <div class="card">
    <img class="card-img-top" src="/material-lite-master/assets/images/background/profile-bg.jpg" alt="Card image cap">
        <div class="card-block little-profile text-center">
            <div class="pro-img"><img src="@ViewBag.image" alt="user" /></div>
            <h3 class="m-b-0">@ViewBag.name</h3>
            <p>Eğitmen</p>
            <a href="/InstructorProfile/Index" class="m-t-10 waves-effect waves-dark btn btn-primary btn-md btn-rounded">Profilim</a>
            <div class="row text-center m-t-20">
                <div class="col-lg-4 col-md-4 m-t-20">
                <h3 class="m-b-0 font-light">@ViewBag.courseCount</h3><small>Kurs Sayısı</small>
                </div>
                <div class="col-lg-4 col-md-4 m-t-20">
                <h3 class="m-b-0 font-light">@ViewBag.studentCount</h3><small>Öğrenci Sayısı</small>
                </div>
                <div class="col-lg-4 col-md-4 m-t-20">
                <h3 class="m-b-0 font-light">@ViewBag.commentCount</h3><small>Yorum Sayısı</small>
                </div>
            </div>
        </div>
    </div>

